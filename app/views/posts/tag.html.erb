<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <h2><span class="badge badge-primary"><%= @tag.name%></span> タグがついた投稿</h2>
      <% @posts.each do |post| %>
        <div class="card mb-3">
          <div class="row no-gutters">
            <div class="col-sm-6 image-box">
              <%= link_to "/posts/#{post.id}" do %>
              <%= image_tag post.image_name.thumbmini.url %>
              <%end%>
            </div>
            <div class="col-sm-6">
              <div class="card-body">
                <div class="inner">
                  <h3 class="card-title"><%=link_to post.title, "/posts/#{post.id}" %></h3>
                  <p><%= post.content %></p>
                </div>
                <div class="publish-time-wrap">
                  <p class="card-text"><%= simple_time(post[:created_at]) %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="paginate-container">
    <%= paginate @posts %>
  </div>
</div>
