
<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @pickup_posts.each_with_index do |pickup,i| %>
    <li data-target="#carouselIndicators" data-slide-to="<%="#{i}"%>" ></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% @pickup_posts.each do |pickup| %>
    <div class="carousel-item">
      <div class="slide-image">
        <%= link_to "/posts/#{pickup.id}" do %>
        <%= image_tag pickup.image_name.url %>
        <div class="title-wrap">
          <%= pickup.title %>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-7">
      <% @posts.each do |post| %>
        <div class="card mb-3">
          <div class="row no-gutters">
            <div class="col-md-6 image-box">
              <%= link_to "/posts/#{post.id}" do %>
              <%= image_tag post.image_name.url %>
              <%end%>
            </div>
            <div class="col-md-6">
              <div class="card-body">
                <div class="inner">
                  <h3 class="card-title"><%=link_to post.title, "/posts/#{post.id}" %></h3>
                  <p><%= post.content %></p>
                </div>
                <div class="publish-time-wrap">
                  <p class="card-text"><%= simple_time(post[:created_at]) %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-md-5">
      <div class="pickup">
        <h3>ピックアップ記事</h3>
        <div class="contents-wrap">
          <% @pickup_posts.each do |pickup| %>
          <div class="content">
            <div class="content-image">
              <%= image_tag pickup.image_name.url %>
            </div>
            <div class="content-title">
              <%= pickup.title %>
            </div>
          </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>

  <div class="paginate-container">
    <%= paginate @posts %>
  </div>
</div>
