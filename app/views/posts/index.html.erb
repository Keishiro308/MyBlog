
<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @pickup_posts.each_with_index do |pickup,i| %>
    <li data-target="#carouselIndicators" data-slide-to="<%="#{i}"%>" ></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% @pickup_posts.each do |pickup| %>
    <div class="carousel-item">
      <%= link_to "/posts/#{pickup.id}" do %>
      <div class="slide-image">
        <%= image_tag pickup.image_name.thumb.url %>
        <div class="title-wrap">
          <%= pickup.title %>
        </div>
      </div>
      <!-- <svg class="bd-placeholder-img bd-placeholder-img-lg d-block w-100" width="800" height="400" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: First slide"><title>Placeholder</title><rect width="100%" height="100%" fill="#777"/><text x="50%" y="50%" fill="#555" dy=".3em">First slide</text></svg> -->
      <% end %>
    </div>
    <% end %>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <% @posts.each do |post| %>
        <div class="card mb-3">
          <div class="row no-gutters">
            <div class="col-sm-6 image-box">
              <%= link_to "/posts/#{post.id}" do %>
              <%= image_tag post.image_name.thumbmini.url %>
              <%end%>
            </div>
            <div class="col-sm-6">
              <div class="card-body">
                <div class="inner">
                  <h3 class="card-title"><%=link_to post.title, "/posts/#{post.id}" %></h3>
                  <p><%= post.content %></p>
                </div>
                <div class="publish-time-wrap">
                  <p class="card-text"><%= simple_time(post[:created_at]) %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="paginate-container">
    <%= paginate @posts %>
  </div>
</div>
